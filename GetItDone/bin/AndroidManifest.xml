<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iamnerdandsocanyou.getitdone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.iamnerdandsocanyou.getitdone.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iamnerdandsocanyou.getitdone.AddTaskActivity"
            android:label="@string/title_activity_add_task"
            android:parentActivityName="com.iamnerdandsocanyou.getitdone.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.getitdone.MainActivity" />
        </activity>
        <activity
            android:name="com.iamnerdandsocanyou.getitdone.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>
 
</manifest>
